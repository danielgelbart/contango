<h1>Listing site_events</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_events.each do |site_event| %>
      <tr>
        <td><%= site_event.time %></td>
        <td><%= site_event.event %></td>
        <td><%= link_to 'Show', site_event %></td>
        <td><%= link_to 'Edit', edit_site_event_path(site_event) %></td>
        <td><%= link_to 'Destroy', site_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

