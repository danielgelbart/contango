<div class="row">
<div class="col-sm-6">
  <h1>Contact PublicSecurities.com</h1>

  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
 
  <% if @contact.errors.any? %>
    <div class="row">
      <div class="col-sm-offest-1"></div> 
      <div id="error_explanation" class="col-sm-11">
        <h3><%= pluralize(@contact.errors.count, "error") %>
        encountered: </h3> 
      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

      </div>
    </div>
  <% end %>

    <div class="form-group"> 
      <label class="col-sm-2 control-label">Name</label> 
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-text-field', placeholder:"Your Name", size:25 %>
      </div>
    </div>
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Email</label> 
      <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-text-field', placeholder:"Your Email", size:25 %>
      </div>
    </div>

    <div class="form-group"> 
      <label class="col-sm-2 control-label">Subject</label> 
      <div class="col-sm-10">
        <%= f.text_field :subject, class: 'form-text-field',
        placeholder:"Your Name", size:49 %>
      </div>
    </div>

    <div class="form-group"> 
      <label class="col-sm-2 control-label">Message</label> 
      <div class="col-sm-10">
        <%= f.text_area :message, :rows => 8, :cols => 48 %>
      </div>
    </div>

    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>

    <div class="col-sm-10 col-sm-offset-2">
      </br>
      <%= f.submit 'Send Message!', :class=> "btn btn-primary" %>
    </div>

  <% end %>
</div>
</div>
