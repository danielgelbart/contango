<%= form_for(@search) do |f| %>
  <% if @search.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h2>

      <ul>
      <% @search.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p> Search by  </p>
  <div class="field">
    <%= f.label :ticker %>
    <%= f.collection_select(:ticker, Stock.order(:ticker), :ticker, :ticker, selected: 'IBM') %>
  </div>
  <p> OR (company name)</p>
  <div class="field">
    <%= f.label :for_year %>
    <%= f.select(:year, options_for_select((2014.downto(1983)).to_a.map{|s|
    [s, s]}, selected:2014) ) %>
  </div>
  <div class="actions">
    <%= f.submit "Get Spreadsheet!"%>
  </div>
<% end %>
